
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="1" author="brightvl">
        <createSequence sequenceName="your_entity_seq"/>
    </changeSet>

    <changeSet id="2" author="your_author">
        <createTable tableName="your_entity">
            <column name="id" type="BIGINT" defaultValueSequenceNext="your_entity_seq"/>
            <!-- other columns -->
        </createTable>
    </changeSet>

</databaseChangeLog>
